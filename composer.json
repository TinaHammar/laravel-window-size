{
    "name": "tanthammar/laravel-window-size",
    "description": "Laravel blade directives and php helpers for serverside rendered content, based on browser window size WITHOUT css",
    "type": "package",
    "license": "MIT",
    "keywords": [
        "laravel",
        "breakpoints"
    ],
    "authors": [
        {
            "name": "Tina Hammar",
            "email": "tinahammar@gmail.com"
        }
    ],
    "require": {
        "php": "^8.0",
        "illuminate/support": "^8.0"
    },
    "autoload": {
        "psr-4": {
            "Tanthammar\\LaravelWindowSize\\": "./src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tanthammar\\LaravelWindowSize\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Tanthammar\\LaravelWindowSize\\LaravelWindowSizeServiceProvider"
            ]
        }
    },
    "require-dev": {
        "orchestra/testbench": "^6.0"
    }
}
